@model ResetPasswordFormViewModel
<form asp-action="ResetPassword"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModelBegin"
      data-ajax-success="onModelSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="onModelComplete">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <input type="hidden" asp-for="Id" />
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input class="form-control form-control-solid" placeholder="Password" asp-for="Password" />
            <label asp-for="Password"></label>
        </div>
        <span asp-validation-for="Password" class="text-danger d-block"></span>
    </div>

    <div class="mb-5">
        <div class="form-floating mb-2">
            <input class="form-control form-control-solid" placeholder="Confirm Password" asp-for="ConfirmPassword" />
            <label asp-for="ConfirmPassword"></label>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
    </div>


    <partial name="_modelfooter" />
</form>