            </div>
        </div>
        <h2>Event</h2>
    </div>
    <div>
        <a href="javascript:;" id="loadModel" data-title="Add Event" data-url="/Event/Create" class="js-render-model btn btn-sm btn-primary">
            <i class="bi bi-plus-square-dotted"></i>
            Add
        </a>
    </div>
</div>

<div class="card shadow-sm  card-flush">
    <partial name="_DataTableCardHeader" />
    <div class="card-body">
            <div class="table-responsive">
            <table class="table table-row-dashed table-row-gray-300 gy-3 align-middle js-datatabels" data-document-title="Tiltes">
                    <thead>
                        <tr class="fw-bold fs-6 text-gray-800">
                            <th>Name</th>
                            <th>EventDate</th>
                            <th>Event End Date</th>
                            <th>Event Begin Register Date</th>
                            <th>Status</th>
                            <th>Created On</th>
                            <th>Last Updated On</th>
                        <th class="js-no-export text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody class="js-tbody">
                    @foreach (var Event in Model)
                        {
                        <partial name="_EventRow" model="@Event" />
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>
@Html.AntiForgeryToken();

@section Plugins {
    <script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
    <script src="~/assets/plugins/datatables/vfs_fonts.js" asp-append-version="true"></script>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}